FROM continuumio/miniconda3:latest as build

RUN conda install -y -c conda-forge conda-pack conda-libmamba-solver && \
    # conda install pip pkgconfig conda-forge::hdf5 && \
    pip install kipoi && \
    kipoi env create DeepSTARR --source=kipoi 
    # && \
    # conda clean -afy

WORKDIR /kipoi-DeepSTARR
RUN conda-pack -n kipoi-DeepSTARR -o /tmp/kipoi-DeepSTARR.tar --ignore-missing-files && \
    tar xf /tmp/kipoi-DeepSTARR.tar && \
    rm /tmp/kipoi-DeepSTARR.tar

FROM debian:bullseye-slim   

RUN apt-get update && apt-get install --no-install-recommends -y ca-certificates git \
    && apt-get clean && rm -rf /var/lib/apt/lists/*

RUN mkdir -p /app
COPY --from=build /kipoi-DeepSTARR /opt/conda/envs/kipoi-DeepSTARR

SHELL ["/bin/bash", "-c"]
RUN echo "source /opt/conda/envs/kipoi-DeepSTARR/bin/activate" > ~/.bashrc
ENV PATH /opt/conda/envs/kipoi-DeepSTARR/bin:$PATH

SHELL ["conda", "run", "-n", "kipoi-DeepSTARR", "/bin/bash", "-c"]


